<p id="notice"><%= notice %></p>

<h1>Quiz</h1>

<% @paths.each do |path| %>
    <p><%= current_student.email %> está matriculado na trilha:</p>
    <p>Trilha: <%= path.title %> - Questões: <%= path.questions.count %></p>
  
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalQuiz">
    Resolver
    </button>

    <!-- Modal -->
    <div class="modal fade" id="modalQuiz" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <% @questions.each do |question| %>
                <ul>
                    <li>
                        <%= form_with(model: @quiz, local: true) do |form| %>

                            <%= question.order %>
                            <%= question.question_description %>
                            <%= question.path.title %>
                            <ul>
                                <% question.question_options.each do |option| %>
                                    <li><%= option.option_description %></li>
                                <% end %>
                            </ul>

                            <div class="actions">
                                <%= form.submit %>
                            </div>
                        <% end %>
                        
                    </li>
                </ul>
            
            <% end %>
        </div>
        
        </div>
    </div>
    </div>

<% end %>