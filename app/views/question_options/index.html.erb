<p id="notice"><%= notice %></p>

<h1>Question Options</h1>

<table>
  <thead>
    <tr>
      <th>Question</th> 
      <th>Option description</th>
      <th>Correct</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question_options.each do |question_option| %>
      <tr>
        <td><%= question_option.question.question_description %></td>
        <td><%= question_option.option_description %></td>
        <td><%= question_option.correct %></td>
        <td><%= link_to 'Show', question_option %></td>
        <td><%= link_to 'Edit', edit_question_option_path(question_option) %></td>
        <td><%= link_to 'Destroy', question_option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

